<% provide(:title, 'Reset password') %>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="title">
        <h5>パスワード再設定</h5>
      </div>
      <%= form_with(model: @user, url: password_resets_path(params[:id]), local: true) do |form| %>
        <%= render 'shared/error_messages', object: form.object %>

        <%= hidden_field_tag :email, @user.email %>
  
        <%= form.label :password, "パスワード(6文字以上)" %>
        <%= form.password_field :password, class: 'form-control', placeholder: "半角英数字6文字以上" %>
     
        <%= form.label :password_confirmation, "パスワードの確認" %>
        <%= form.password_field :password_confirmation, class: 'form-control', placeholder: "パスワード(再入力)" %>

        <%= form.submit "送信する", class: "btn btn-info btn-lg form-submit" %>
      <% end %>
    </div>
  </div>
</div>

