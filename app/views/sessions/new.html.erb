<% provide(:title, 'Log in') %>
<div class="container">
  <div class="row">
    <div class="col">
      <div class="title">
        <h5>StudySupportにログイン</h5>
　      <p>StudySupportが初めての方は<%= link_to "新規登録する(無料)", signup_path %></p>
　      <p>パスワードを忘れた方は<%= link_to "こちら", new_password_reset_path %></p>
      </div>
      <%= form_with(scope: :session, url: login_path, local: true) do |form| %>

        <%= form.label :email, "メールアドレス" %>
        <%= form.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>

        <%= form.label :password, "パスワード(6文字以上)" %>
        <%= form.password_field :password, class: 'form-control', placeholder: "半角英数字6文字以上" %>
        
        <%= form.check_box :remember_me, class: 'form-check-input' %>
        <%= form.label :remember_me, '次回以降ログイン省略', class: 'form-check-label' %>

        <%= form.submit "送信する", class: "btn btn-info btn-lg form-submit" %>
      <% end %>
      <%= render '/testsessions/testlogin' %>
    </div>
  </div>
</div>
