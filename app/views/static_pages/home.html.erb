<main role="main">
  <div class="jumbotron">
    <div class="container">
      <h4>StudySupportとは？？</h4>
      <p>みんながあなたの勉強をサポートします。</p>
      <%= link_to "StudySupportの詳細へ", about_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
  <div class="container index-container">
    <div class="row">
      <div class="col-sm-2">
        <%= link_to "質問する", new_micropost_path, class: "btn btn-outline-primary" %>
          <p>科目</p>
          <%= form_with url: root_path, method: :get, local: true, class: "search-form" do |form| %>
            <%= select_tag :tag_id,
                              options_from_collection_for_select(Tag.all, :id, :subject, params[:tag_id]),
                              {
                                  prompt: 'すべての科目',
                                  onchange: 'submit(this.form);'
                              }
             %>
          <% end %>  
      </div>
      <div class="col-sm-8">
        <%= render partial: '/microposts/micropost', collection: @feed, as: "post" %>
        <div class="pagination justify-content-center">
          <%= paginate @feed %>
        </div>
      </div>
      <div class="col-sm-2">
        <%= link_to "質問する", new_micropost_path, class: " " %>
      </div>
    </div>
  </div>
</main>