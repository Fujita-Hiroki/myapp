<% provide(:title, @user.name) %>
<div class="show-title">
  <h5>過去にした質問</h5>
</div>
<div class="container show-container">
  <div class="row">
    <div class="col-md-4">
      <h7><%= @user.name %></h7>
    </div>
    <div class="col-md-8">
      <% if @user.microposts.any? %>
        <h6>質問一覧 (<%= @user.microposts.count %>)</h6>
        <ol class="microposts">
        <%= render @microposts %>
        </ol>
        <div class="pagination justify-content-center">
          <%= paginate @microposts %>
        </div>
    　<% else %>
  　　  <h7>過去に質問したことがありません</h7>
      <% end %>
    </div>
  </div>
</div>
