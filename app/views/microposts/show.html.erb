<div class="row">
  <div class="col-1 col-md-2">
  </div>
  <div class="col-10 col-md-8">
    <div class="text-right">
      <%= link_to "編集する", edit_micropost_path, class: "btn btn-outline-primary" %>
    </div>
    <div class="micropost border">
      <div class="tag-subject">
        <% @micropost.tags.each do |tag| %>
          <span class="badge badge-light"><%= tag.subject %>の質問</span>
        <% end %> 
      </div>
      <div class="box">
        <div class="item">
          あなたの考えや答え
        </div>
        <div class="sentence">
          <%= simple_format(@micropost.understanding) %>
        </div>
        <div class="item">
          不安な点や確認したいこと
        </div>
        <div class="sentence">
          <%= simple_format(@micropost.problem) %>
        </div>
        <div class="picture-show">
          <% @micropost.pictures.each do |picture| %>
            <%= image_tag picture.variant(resize_to_limit: [500, 500]).processed %>
          <% end %>      
        </div>
        <div class="timestamp">
          <%= @micropost.created_at.strftime("%m/%d %H:%M") %>
            <span class="user"><%= @micropost.user.name %></span> 
          <% if @micropost.user.avatar.attached? %>
            <%= image_tag @micropost.user.avatar, size:"20x20", class:"avatar-circle float-right" %>
          <% else %>
            <%= image_tag ("/images/default.png"), size:"20x20", class:"avatar-circle float-right" %>
          <% end %>
        </div>
      </div>  
    </div>
    <div class="comment-index">
      回答一覧
    </div>
      <%= render '/comments/comment' %>
      <%= render '/comments/form' %>
  </div>
  <div class="col-1 col-md-2">
  </div>
</div>
