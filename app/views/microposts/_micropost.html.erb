<%= link_to micropost_path(post), class: "no-line" do %>
  <div class="index-micropost border">
    <% post.tags.each do |tag| %>
      <% tag.subject %>
    <% end %>   
    <div class="box">
      <div class="item">
        あなたの考えや答え
      </div>
      <div class="sentence">
        <%= simple_format(post.understanding) %>
      </div>
      <div class="item">
        不安な点や確認したいこと
      </div>
      <div class="sentence">
        <%= simple_format(post.problem) %>
      </div>
      <% if post.pictures.attached? %>
      <div class="picture">
        <%= image_tag post.resize_pictures %>
      </div>
      <% end %>
      <div class="timestamp">
        <%= post.created_at.strftime("%m/%d %H:%M") %>
          <span class="user"><%= post.user.name %></span>
        <% if post.user.avatar.attached? %>
          <%= image_tag post.user.avatar, size:"20x20", class:"avatar-circle float-right" %>
        <% else %>
          <%= image_tag ("default.png"), size:"20x20", class:"avatar-circle float-right" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>